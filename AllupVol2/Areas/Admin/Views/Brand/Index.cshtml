@using AllupVol2.Areas.Admin.ViewModels
@model List<GetBrandVM>
@{
    int countB = 0;
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Brands</p>
                <p class="card-description">
                    <a asp-action="create" class="btn btn-success">Create Brand</a>
                </p>
                <div class="col-lg-12">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Setttings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetBrandVM brand in Model)
                            {
                                countB++;
                                <tr>
                                    <td>@countB</td>
                                    <td><img src="~/assets/images/@brand.Image" /></td>
                                    <td>@brand.Name</td>

                                    <td>
                                        <a asp-action="delete" asp-route-id="@brand.Id" class="btn btn-danger">Delete</a>
                                        <a asp-action="update" asp-route-id="@brand.Id" class="btn btn-warning">Update</a>
                                        <a class="btn btn-primary">Detail</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
