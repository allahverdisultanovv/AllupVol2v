@using AllupVol2.Areas.Admin.ViewModels
@model UpdateSlideVM

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Update Slide
            </p>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <img style="width:150px; height:150px;" src="~/assets/images/@Model.Image" />
                    <input asp-for="Image" class="form-control" type="hidden">

                </div>
                <div class="form-group">
                    <label asp-for="Photo"> Photo</label>
                    <input asp-for="Photo" class="form-control" accept="image/*">
                    <span class="text-danger" asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Maintitle">MainTitle</label>
                    <input asp-for="Maintitle" class="form-control" placeholder="MainTitle">
                    <span class="text-danger" asp-validation-for="Maintitle"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TitleDesc">TitleDesc</label>
                    <input asp-for="TitleDesc" class="form-control" placeholder="TitleDesc">
                    <span class="text-danger" asp-validation-for="TitleDesc"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Subtitle">SubTitle</label>
                    <input asp-for="Subtitle" class="form-control" placeholder="Subtitle">
                    <span class="text-danger" asp-validation-for="Subtitle"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input asp-for="Order" class="form-control" placeholder="Order">
                    <span class="text-danger" asp-validation-for="Order"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>

                </div>



                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>