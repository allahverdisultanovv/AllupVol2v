@using AllupVol2.Areas.Admin.ViewModels
@model List<GetTagVM>
@{
    int countT = 0;
}
<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Tags</p>
                <p class="card-description">
                    <a asp-action="create" class="btn btn-success">Create Tag</a>
                </p>
                <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Setttings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetTagVM tag in Model)
                            {
                                countT++;
                                <tr>
                                    <td>@countT</td>
                                    <td>@tag.Name</td>

                                    <td>
                                        <a asp-action="delete" asp-route-id="@tag.Id" class="btn btn-danger">Delete</a>
                                        <a asp-action="update" asp-route-id="@tag.Id" class="btn btn-warning">Update</a>
                                        <a class="btn btn-primary">Detail</a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
